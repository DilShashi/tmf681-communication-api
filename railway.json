{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "installCommand": "npm install"
  },
  "start": {
    "cmd": "node src/app.js",
    "nixpacks": {
      "start": "node src/app.js"
    }
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "8080"
  },
  "include": [
    "src",
    "public",
    "package.json",
    "package-lock.json"
  ]
}